mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")

mixin about-list(text)
	li 
		span
		!= text

mixin about-wrap(title, num, span)
	+b.about-list
		if title
			+e.P.num!= num
			+e.P.text!= span
		ul
			block

mixin page-head(title, ...lists)
	+b.page-head
		.container
			block
			h1!= title

